{
  "extends": ["plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [1, "never"],
    "max-len": [1, 120]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}